#include<iostream>

using namespace std;

int main()
{
    int q;
    cin >> q;
    while(q--)
    {
        int n;
        cin >> n;
        char s[n+1], t[n+1];
        cin >> s >> t;

        int freq[26]={0};
        
        for(int i=0; i<n; i++)
            freq[s[i]-'a']++;
        for (int i=0; i<n; i++)
            freq[t[i]-'a']--;
        int cnt=0;
        for (int i = 0; i < 26; i++)
        {
            if(freq[i] != 0) cnt++;
        }

        if(cnt==0) cout << "YES" << endl;
        else cout << "NO" << endl;
    }
    return 0;
}
