#include"bits/stdc++.h"

using namespace std;

int main()
{
    int n, s=0, d=0, cnt=0;
    cin >> n;
    int arr[n];
    for(int i=0; i<n; i++)
        cin >> arr[i];
    int l, r;
    for(l=0, r=n-1; l<=r;)
    {
        int res;
        if(arr[l]>arr[r])
        {
            cnt++;
            res=arr[l];
            l++;
        }
        else
        {
            cnt++;
            res=arr[r];
            r--;
        }

        if(cnt%2!=0) s+=res;
        else d+=res;
    }
    cout << s << " " << d << endl;
    return 0;
}
